class cfgRemoteExec 
{
	// List of Functions allowed to be sent from client via remoteExec
	class Functions
	{
		// RemoteExec modes:
		// 0 - disabled
		// 1 - allowed, taking whitelist into account
		// 2 - allowed, ignoring whitelist (default, because of backward compatibility)
		mode = 1;

		// Ability to send JIP messages:
		// 0 - disable JIP messages
		// 1 - allow JIP messages (default)
		jip = 1;
		class BIS_fnc_effectKilledAirDestruction	{ allowedTargets = 1; };
		class BIS_fnc_effectKilledSecondaries		{ allowedTargets = 1; };
		class BIS_fnc_objectVar						{ allowedTargets = 1; };
		class BIS_fnc_setCustomSoundController		{ allowedTargets = 1; };
		class CQC_fnc_playerAddKill 							{ allowedTargets = 1; };
		class addPlayerScores 						{ allowedTargets = 1; };
		class BIS_fnc_debugConsoleExec				{ allowedTargets = 1; };
		class CQC_fnc_UpdateDatabase 				{ allowedTargets = 2; };

	};

	// List of Commands allowed to be sent from client via remoteExec
	class Commands
	{
		mode = 0;

		class CALL     { allowedTargets = 0; jip = 0; };
		class setDir   { allowedTargets = 2; jip = 0; };
	};
};

